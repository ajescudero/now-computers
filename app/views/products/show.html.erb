<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Release date:</strong>
  <%= I18n.localize(@product.release_date) %>
</p>
<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>
<p>
  <strong>Store:</strong>
  <%= @product.store.name%>
</p>
<p>
  <strong>Price:</strong>
  $ <%= @product.price %>
</p>
<% if user_signed_in? %>
  <%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>
<%= link_to 'Back', store_products_path(@product.store) %>
