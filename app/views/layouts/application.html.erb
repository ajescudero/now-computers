<!DOCTYPE html>
<html>
  <head>
    <title>Now Computers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <div class="col-xl-12">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <a class="navbar-brand" href="<%= stores_path %>">Now Computers</a>
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse float-right" id="navbarResponsive" style="">
            <ul class="navbar-nav ml-md-auto">
              <% if current_user %>
                <li class="nav-item">
                  <p class="nav-link">Hello, <%= current_user.email %></p>
                </li>
                <li class="nav-item">
                  <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete, class: "nav-link js-scroll-trigger" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to 'Sign up', new_user_registration_path, class: "nav-link js-scroll-trigger" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Sign in', new_user_session_path, class: "nav-link js-scroll-trigger" %>
                </li>
              <% end %>
            </ul>
          </div>
        </nav>
        <div class="col-lg-12">
          <%= render partial: 'layouts/flash', flash: flash %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
