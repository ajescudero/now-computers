<!DOCTYPE html>
<html>
  <head>
    <title>Now Computers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="<%= stores_path %>">Now Computers</a>
      <div class="navbar-collapse collapse float-right" id="navbarColor01" style="">
        <ul class="navbar-nav ml-md-auto">
          <% if current_user %>
            <li class="nav-item">
              <p class="nav-link">Hello, <%= current_user.email %></p>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="col-lg-12">
      <%= render partial: 'layouts/flash', flash: flash %>
      <%= yield %>
    </div>
  </body>
</html>
