<h1>Stores</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @stores.each do |store| %>
        <tr>
            <td><%= store.name %></td>
            <td><%= store.description %></td>
            <% if user_signed_in? %>
                <td><%= link_to 'Show', store %></td>
            <% end %>
            <td><%= link_to 'Go', store_products_path(store.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>
<% if user_signed_in? %>
    <%= link_to 'New Store', new_store_path %>
<% end %>