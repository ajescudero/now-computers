<div class="col-lg-5">
  <h1>Stores</h1>
  <% @stores.each do |store| %>
    <div class="list-group">
      <%= link_to store.name, store_products_path(store.id), class: "list-group-item list-group-item-action" %>
      <% if user_signed_in? %>
        <%= link_to 'Edit', store %>
      <% end %>
    </div>
  <% end %>
  <br>
  <% if user_signed_in? %>
    <%= link_to 'New Store', new_store_path %>
  <% end %>
</div>
